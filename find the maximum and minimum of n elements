#include <stdio.h>
#include <conio.h>

#define MAX 100

void main()
{
    int arr[MAX], n, i;
    int max, min;

    clrscr();

    printf("Enter the number of elements (max %d): ", MAX);
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }

    max = arr[0];
    min = arr[0];

    for(i = 1; i < n; i++)
    {
        if(arr[i] > max)
            max = arr[i];

        if(arr[i] < min)
            min = arr[i];
    }

    printf("\nMaximum value = %d", max);
    printf("\nMinimum value = %d", min);

    getch();
}
