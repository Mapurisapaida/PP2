#include <stdio.h>
#include <conio.h>

#define MAX 100

void main()
{
    int arr1[MAX], arr2[MAX], arr3[MAX * 2];
    int n1, n2, i, j;

    clrscr();

    printf("Enter number of elements in first array: ");
    scanf("%d", &n1);

    printf("Enter %d elements for first array:\n", n1);
    for(i = 0; i < n1; i++)
    {
        scanf("%d", &arr1[i]);
    }

    printf("\nEnter number of elements in second array: ");
    scanf("%d", &n2);

    printf("Enter %d elements for second array:\n", n2);
    for(i = 0; i < n2; i++)
    {
        scanf("%d", &arr2[i]);
    }

    
    for(i = 0; i < n1; i++)
    {
        arr3[i] = arr1[i];
    }

   
    for(j = 0; j < n2; j++)
    {
        arr3[i + j] = arr2[j];
    }

    printf("\nMerged array elements are:\n");
    for(i = 0; i < n1 + n2; i++)
    {
        printf("%d ", arr3[i]);
    }

    getch();
}
